<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar.BlueActionBar</item>
        <item name="android:listSeparatorTextViewStyle">@style/CustomListSeparator</item>
    </style>
    
    <style name="PreferenceTheme" parent="AppTheme">
	</style>
	
     <style name="MyTheme.ActionBar.BlueActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:titleTextStyle">@style/MyTheme.TitleTextStyle</item>
    </style>
 
</resources>
