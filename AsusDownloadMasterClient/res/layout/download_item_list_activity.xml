<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    

    
    <TextView android:id="@+id/no_torrents_label"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:paddingTop="20dp"
			  android:textSize="16sp"
			  android:gravity="center"
			  android:text="@string/item_list_no_downloads"/>
    
    <ListView android:id="@id/android:list"
              android:layout_width="match_parent"
              android:layout_height="match_parent"          
              android:drawSelectorOnTop="false"
              android:choiceMode="singleChoice"/>
    
    <LinearLayout
             android:id = "@+id/download_item_list_updating_message"
        	 android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal"
	         android:gravity="right"
    		 android:layout_gravity="right"
    		 android:visibility="gone"
        >
    
	    <LinearLayout
	     	     android:paddingTop="1dp"
	     	     android:paddingBottom="1dp"
	     	     android:paddingLeft="15dp"
	     	     android:paddingRight="15dp"
	     	     android:background="@drawable/update_bar_background"
	     	     android:orientation="horizontal"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:gravity="right"
		         android:layout_gravity="right"
		         android:layout_marginRight="30dp"
		         >
		         
	     	    <ProgressBar
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center"
				        style="@android:style/Widget.ProgressBar.Small"
						android:layout_margin="3dp">
				</ProgressBar>
	    	
		      	<TextView
					  android:layout_width="wrap_content"
					  android:layout_height="wrap_content"
					  android:textSize="14sp"
					  android:gravity="center|top"
					  android:textAlignment="center"	
					  android:layout_margin="4dp"
					  android:textColor="#FFFFFF"
					  android:text="Refreshing, please wait..."/>
	    	
	    	</LinearLayout>  

    </LinearLayout>
    
</AbsoluteLayout>