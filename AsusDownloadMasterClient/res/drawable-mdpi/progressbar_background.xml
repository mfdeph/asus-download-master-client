<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/bar_background">
        <shape>
            <corners android:radius="3dp" />
            <gradient android:startColor="#E0E0E0"
                android:centerColor="#C0C0C0" 
                android:endColor="#D0D0D0" 
                android:centerY="0.5" 
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@+id/bar_value">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient android:startColor="#81add3"
                    android:endColor="#87a6c2" 
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>